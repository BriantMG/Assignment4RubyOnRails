<div class="card" style="width: 50rem">
  <div class="card-body">
    <%= form_with(model: product) do |form| %>
      <% if product.errors.any? %>
        <div class="form-group" style="color: red">
          <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
            <% product.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :product_name, style: "display: block" %>
        <%= form.text_field :product_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :product_date, style: "display: block" %>
        <%= form.date_field :product_date, class: "form-control" %>
      </div>

      <div class="form-group">
        <%if product.product_image.attached?%>
          <%= image_tag product.product_image, style: "width: 15rem;"%>
        <%end%>

        <%= form.label :product_image%>
        <%= form.file_field :product_image, class: "form-control"%>
      </div>

      <div class="form-group">
        <%= form.label :product_price, style: "display: block" %>
        <%= form.text_field :product_price, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :product_sku, style: "display: block" %>
        <%= form.text_field :product_sku, class: "form-control"%>
      </div>

      <div class="form-group">
        <%= form.label :product_description, style: "display: block" %>
        <%= form.text_area :product_description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>
